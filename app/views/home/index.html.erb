<div class='py-2'>
  <h3>Olá</h3>
</div>
<% if user_signed_in? %>
  <h1>Bem vind o Loja do Dev</h1>
  <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'bg-red-300 text-white p-2 rounded rounded-xl hover:bg-red-400' %>
<% else %>
  <div>
  <h2>Você não está logado, por favor registre-se!<%= link_to 'Registrar-se', new_user_registration_path, class:'bg-blue-300 text-white rounded rounded-xl hover:bg-blue-400 p-2'%></h2>
  </div>
  <div class='mt-2'>
  <%= link_to 'Entrar', new_user_session_path, class: 'bg-green-400 text-white p-2 rounded rounded-xl hover:bg-green-500' %>
  </div>
<% end %>
